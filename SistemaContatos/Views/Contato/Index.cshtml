@model List<Contato>

@{
    ViewData["Title"] = "Contatos disponíveis";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success " role="button" asp-controller="Contato" asp-action="AdicionarContato">Adicionar contato</a>
    </div>
    @if(TempData["Sucesso"] != null){
        <div class="alert alert-success" role="alert">
        @TempData["Sucesso"]
        </div>
    }
    else if(TempData["Erro"] != null)
    {
        <div class="alert alert-danger" role="alert">
        @TempData["Erro"]
        </div>
    }

    <br>
    <h2 class="display-4">Contatos existentes</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Código ID</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scoped="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Contato item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Nome</td>
                        <td>@item.Email</td>
                        <td>@item.Telefone</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Contato" asp-action="EditarContato">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Contato" asp-action="ExcluirContato">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>